<link rel="stylesheet" href="/css/styles-category.css" />

<h1>{{name}}</h1>

{{#if parent}}
  <p>Parent Category:
    <a href="/category/{{parent._id}}">{{parent.name}}</a></p>
{{/if}}

<p>{{category.description}}</p>

<h2>Cars in this category</h2>
<div class="cars">
  {{#each cars}}
    <div class="car">
      <h3>{{this.name}}</h3>
      <img src="{{this.image}}" alt="{{this.name}}" />
      <p>Price: ${{this.price}}</p>
      <p>Price: ${{this.color}}</p>
      <p>{{this.description}}</p>
      <a href="/car/{{this._id}}">View Details</a>
    </div>
  {{else}}
    <p>No cars found in this category.</p>
  {{/each}}
</div>